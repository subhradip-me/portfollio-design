# Environment Variables Example
# Copy this file to .env and update the values

# API Configuration - Update this to your backend URL
# Development: http://localhost:5000/api
# Production: https://portfollio-backend.onrender.com/api (no trailing slash)
VITE_API_BASE_URL=https://portfollio-backend.onrender.com/api

# Application Configuration
VITE_APP_NAME=Portfolio Admin

# Demo Credentials (for development/demo purposes)
VITE_DEMO_EMAIL=admin@subhradip.me
VITE_DEMO_PASSWORD=admin123

# Enable demo mode when backend is unavailable
VITE_DEMO_MODE=true
VITE_APP_VERSION=1.0.0

# Development Configuration  
VITE_NODE_ENV=development

# Site URL for SEO (used in sitemap generation)
VITE_SITE_URL=http://localhost:5174
